{% extends 'base.html.twig' %}

{% block title %}Connexion - {{parent()}}
{% endblock %}

{% block body %}

	<form method="post">

		{% if error %}

			<div class="my-3 alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>

		{% endif %}

		{% if app.user %}

			<div class="my-3 text-center">

				<p>Vous êtes connecté en tant que
					{{ app.user.pseudo }}</p>

				<a href="{{ path('app_logout') }}">Se déconnecter</a>

			</div>

		{% endif %}

		<Div class="col-8 offset-2">

			<h1 class="h3 my-3 font-weight-normal">Veuillez-vous connecter</h1>

			<label for="inputEmail" class="mt-2">Adresse mail</label>

			<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mt-2" autocomplete="email" required autofocus>

			<label for="inputPassword" class="mt-2">Mot de passe</label>

			<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

			<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

		</Div>

		{#
				        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
				        See https://symfony.com/doc/current/security/remember_me.html
				
				        <div class="checkbox mb-3">
				            <label>
				                <input type="checkbox" name="_remember_me"> Remember me
				            </label>
				        </div>
				    #}

		<div class="text-center mt-3">

			<button class="btn btn-lg btn-primary" type="submit">
				Se connecter
			</button>

		</div>

	</form>

{% endblock %}

{% block sidebar %}{% endblock %}
